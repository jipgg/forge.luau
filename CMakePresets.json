{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/cmake",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-14",
                "CMAKE_CXX_COMPILER": "g++-14",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "framework",
            "configurePreset": "default",
            "targets": [
                "lauf_fw"
            ]
        }
    ]
}
